#!/bin/sh

[[ -f ~/.config/i3/i3-config-name ]] && . ~/.config/i3/i3-config-name

# assemble config from specific and shared parts
echo > ~/.config/i3/config
cat ~/.config/i3/config-$I3_CONFIG-pre >> ~/.config/i3/config
cat ~/.config/i3/config-shared >> ~/.config/i3/config
cat ~/.config/i3/config-$I3_CONFIG-post >> ~/.config/i3/config

i3 &
read
