# {{{ Variables

# Modifier
set $mod Mod4

# Colours
set $bg-color "#1b2b34"
set $tbg-color "#19000044"
set $inactive-bg-color "#1b2b34"
set $text-color "#c0c5ce"
set $bar-text-color "#ffffff"
set $inactive-text-color "#676e7d"
set $bar-inactive-text-color "#aaaaaa"
set $urgent-bg-color "#e53935"
set $turgent-bg-color "#e53935cc"

# Font
font pango:SFNS Display, FontAwesome 10

# Workspace labels
set $d1 "1 "
set $d2 "2 "
set $d3 "3 "
set $d4 "4 "
set $d5 "5 "
set $d6 "6"
set $d7 "7"
set $d8 "8"
set $d9 "9"
set $d10 "10 "

# }}}

# {{{ Keybindings

# kill focused window
bindsym $mod+Shift+q kill

# move focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split
bindsym $mod+v split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# switch to workspace
bindsym $mod+1 workspace $d1
bindsym $mod+2 workspace $d2
bindsym $mod+3 workspace $d3
bindsym $mod+4 workspace $d4
bindsym $mod+5 workspace $d5
bindsym $mod+6 workspace $d6
bindsym $mod+7 workspace $d7
bindsym $mod+8 workspace $d8
bindsym $mod+9 workspace $d9
bindsym $mod+0 workspace $d10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $d1
bindsym $mod+Shift+2 move container to workspace $d2
bindsym $mod+Shift+3 move container to workspace $d3
bindsym $mod+Shift+4 move container to workspace $d4
bindsym $mod+Shift+5 move container to workspace $d5
bindsym $mod+Shift+6 move container to workspace $d6
bindsym $mod+Shift+7 move container to workspace $d7
bindsym $mod+Shift+8 move container to workspace $d8
bindsym $mod+Shift+9 move container to workspace $d9
bindsym $mod+Shift+0 move container to workspace $d10

# reload/restart/exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
# }}}

# {{{ Window colours

#                        border              background          text                  indicator
client.focused           $bg-color           $bg-color           $text-color           #00ff00
client.unfocused         $inactive-bg-color  $inactive-bg-color  $inactive-text-color  #00ff00
client.focused_inactive  $inactive-bg-color  $inactive-bg-color  $inactive-text-color  #00ff00
client.urgent            $urgent-bg-color    $urgent-bg-color    $text-color           #00ff00

# }}}

# {{{ Other config

hide_edge_borders both

# application settings
assign [class="MonoDevelop"] $d3
assign [class="Atom"] $d3
assign [class="nvim-qt"] $d3
assign [class="Thunar"] $d5

# }}}

# {{{ Startup

exec_always --no-startup-id compton -bCcf --config ~/.config/compton/compton.conf

# }}}

# {{{ Resize mode
mode "" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode ""

# {{{ i3-gaps

gaps inner 10
gaps outer 4
new_window none
smart_borders on

set $mode_gaps Toggle gaps: (1) on (2) off
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
    bindsym 1 mode "default", gaps inner all set 10, gaps outer all set 4
        bindsym 2 mode "default", gaps inner all set 1, gaps outer all set 1
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# }}}
