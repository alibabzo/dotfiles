# {{{ Keybindings

# Application launching
bindsym $mod+Return scratchpad show
bindsym $mod+Shift+Return exec --no-startup-id termite
bindsym $mod+Shift+f exec --no-startup-id chromium

bindsym $mod+Shift+e exec --no-startup-id xfce4-session-logout

# rofi
bindsym $mod+d exec --no-startup-id albert show

# }}}

# {{{ Bar

bar {
    i3bar_command i3bar -t
    output $mainscreen
    tray_output $mainscreen
    status_command i3blocks -c ~/.config/i3blocks/i3blocks-desktop.conf
    colors {
        background $tbg-color
        separator #757575
        #                   border              background          text
        focused_workspace   $tbg-color          $tbg-color          $bar-text-color
        inactive_workspace  $tbg-color          $tbg-color          $bar-inactive-text-color
        urgent_workspace    $turgent-bg-color   $turgent-bg-color   $bar-text-color
  }
}
bar {
    i3bar_command i3bar -t
    output $secondscreen
    colors {
        background $tbg-color
        separator #757575
        #                   border              background          text
        focused_workspace   $tbg-color          $tbg-color          $bar-text-color
        inactive_workspace  $tbg-color          $tbg-color          $bar-inactive-text-color
        urgent_workspace    $turgent-bg-color   $turgent-bg-color   $bar-text-color
  }
}
# }}}

# {{{ Startup

exec_always --no-startup-id colour-scheme-boot
exec --no-startup-id termite -t "dropdown"

# }}}

# {{{ Other config

workspace $d1 output $mainscreen
workspace $d4 output $mainscreen
workspace $d10 output $mainscreen
workspace $d2 output $secondscreen
workspace $d3 output $secondscreen

assign [class="chromium"] $d1

for_window [title="dropdown"] floating enable, resize set 1000px 210px, move position 20px 20px, move scratchpad, sticky enable

# }}}
