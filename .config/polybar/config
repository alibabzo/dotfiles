[appearance]
background = #5a000000
foreground = #eee
font-0 = Roboto:size=9:weight=medium;0
font-1 = FontAwesome:size=9;0

[bar/right]
monitor = HDMI-1
width = 100%
height = 27
offset-x = 0
offset-y = 0
bottom = true

background = ${appearance.background}
foreground = ${appearance.foreground}
underline-size = 2
underline-color = ${appearance.foreground}
spacing = 1
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = ${appearance.font-0}
font-1 = ${appearance.font-1}

modules-left = bspwm xwindow
; modules-center =
modules-right = loadavg date powermenu

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

wm-restack = bspwm
; override-redirect = true

[bar/left]
monitor = DP-1
width = 100%
height = 27
offset-x = 0
offset-y = 0
bottom = true

background = ${appearance.background}
foreground = ${appearance.foreground}
underline-size = 2
underline-color = ${appearance.foreground}
spacing = 1
padding-left = 1
padding-right = 1
module-margin-left = 0
module-margin-right = 0

font-0 = ${appearance.font-0}
font-1 = ${appearance.font-1}

; modules-left =
; modules-center =
modules-right = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

wm-restack = bspwm
; override-redirect = true

;
; modules
;

[module/bspwm]
type = internal/bspwm

format = <label-state>

label-focused = %name%
label-focused-background = ${appearance.background}
label-focused-underline= #ddd
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = #88ffffff
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%
label-padding = 1

[module/date]
type = internal/date
interval = 1.0
date = %a %d %b
time = %H:%M
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

label = %date% %time%
format =   <label>
format-background = ${appearance.background}
format-padding = 1

[module/loadavg]
type = custom/script
interval = 10
exec = cat /proc/loadavg | awk '{print $1}'
format-prefix = " "
format-padding = 1

[module/coretemp]
type = custom/script
interval = 20
exec-if = sensors
exec = sensors | grep Core | awk '{print substr($3, 2, length($3)-5)}' | tr '\n' ' ' | sed 's/ /°C  /g' | sed 's/  $//'

[module/powermenu]
type = custom/menu

label-open = 
label-close = cancel
label-open-padding = 1
label-close-padding = 1

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-0-padding = 1
menu-0-1-padding = 1

menu-1-0 = reboot?
menu-1-0-exec = systemctl reboot
menu-1-0-padding = 1

menu-2-0 = power off?
menu-2-0-exec = systemctl poweroff
menu-2-0-padding = 1
